{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
}

